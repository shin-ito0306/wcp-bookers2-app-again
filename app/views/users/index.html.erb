<% if @book.errors.any? %>
  <%= @book.errors.full_messages.count %>件のerrorが発生しました。
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
<%= render 'books/sidebar', user: @user, book: @book %>

<h1>users</h1>
<% @users.each do |user| %>
  <%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: 'no_image.jpg' %>
  <%= user.name %>
  <%= link_to "Show", user_path(user.id) %>
  
<% end %>