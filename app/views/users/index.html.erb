<h1>User info</h1>

  <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: 'no_image.jpg' %>
  <%= @user.name %>
  <%= @user.introduction %><br>
  <%= link_to "edit", edit_user_path(current_user.id) %>


<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  
  <%= f.label :body %><br>
  <%= f.text_field :body %>
  
  <%= f.submit "Create Book" %>
  
<% end %>

<h1>users</h1>
<% @users.each do |user| %>
  <%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: 'no_image.jpg' %>
  <%= user.name %>
  <%= link_to "Show", user_path(user.id) %>
  
<% end %>