<% if @book.errors.any? %>
  <%= @book.errors.full_messages.count %>件のerrorが発生しました。
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
<%= render 'books/sidebar', book: @book, user: @user %>

<h1>Books</h1>

<% @books.each do |book| %>
  
  <%= link_to "#{book.title}", book_path(book.id) %>
  <%= book.body %>
<% end %>