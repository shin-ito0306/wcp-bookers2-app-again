<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :body, "opinion" %>
  <%= f.text_area :body %>
  
  <%= f.submit "Update Book" %>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
