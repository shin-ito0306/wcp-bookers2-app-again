<h1>User info</h1>

  <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpeg' %>
  <%= @user.name %>
  <%= @user.introduction %><br>
  <%= link_to "edit", edit_user_path(@user.id) %>


<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  
  <%= f.label :body %><br>
  <%= f.text_field :body %>
  
  <%= f.submit "Create Book" %>
  
<% end %>


<h1>showページ</h1>
<%= @book_show.title %>
<%= @book_show.body %>
<%= link_to "Edit", edit_book_path(@book_show.id) %>
<%= link_to "Destroy", book_path(@book_show.id), method: :delete, data: { confirm: "本当に削除しますか" } %>